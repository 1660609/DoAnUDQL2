                <TextBlock Text="Mật khẩu:" FontSize="13" Height="36" Margin="25,139,0,274.2" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Black"/>
                <PasswordBox x:Name="pwb1" Margin="122,130,7.6,285.2" BorderBrush="Black" BorderThickness="1"/>
                <TextBlock Text="Tên người dùng:" FontSize="13" Height="35" Margin="9,192,192.6,222.2" VerticalAlignment="Center" FontWeight="Black"/>
                <TextBox x:Name="txb2" Margin="121,180,5.6,233.2" BorderBrush="Black" BorderThickness="1"/>
                <Button Click="ButtonSignup_Click" Content="Đăng ký tài khoản" FontSize="20" Margin="49,246,57.6,153.2" BorderBrush="Aqua" BorderThickness="2" Background="Gray" Height="Auto"/>
